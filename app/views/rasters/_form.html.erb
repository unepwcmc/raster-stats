<%= simple_form_for(@raster, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :display_name %>
    <%= f.input :source_file %>
    <%= f.input :color_min %>
    <%= f.input :color_max %>
    <%= f.input :zoom_min %>
    <%= f.input :zoom_max %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
